# ============================================================================
# WIDGETS
# ============================================================================

uploader = widgets.FileUpload(
    accept='.csv',
    multiple=True,
    description='Seleccionar',
    button_style='info'
)

combo_csv = widgets.Dropdown(
    description='Archivo CSV:',
    options=[],
    layout=widgets.Layout(width='80%')
)

